<div class="form-popup text-center model-box" id="myForm">
    <form action="" method="POST" class="form-container">
        <h5 class="mt-3 mx-2 d-flex justify-content-between">Send a Email : <span class="close mx-2"
                onclick="closeForm()">&times;</span></h5>
        <input type="email" placeholder="Enter Email" name="email" id="email" required>
        <button type="submit" onclick="msgdisplay()" class="send-btn btn btn-info font-size-09 text-light">Send</button>
        <br>
         <div class="mt-2" id="message">
            <p>Email sent successfully!!</p>
        </div>
    </form>
</div>
